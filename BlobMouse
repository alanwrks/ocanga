<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <style>
    html, body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      background: #c9d8e2;
      height: 100vh;
      width: 100vw;
    }
    canvas {
      display: block;
    }
  </style>
</head>
<body>
  <canvas id="canvas"></canvas>
  <script>
    const canvas = document.getElementById("canvas");
    const ctx = canvas.getContext("2d");

    let width, height;
    function resize() {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
    }
    window.addEventListener("resize", resize);
    resize();

    const image = new Image();
    image.src = "https://images.unsplash.com/photo-1604079628040-94301bb21b91?q=80&w=987&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"; // substitua aqui

    const mouse = { x: 0.5, y: 0.5 };
    document.addEventListener("mousemove", e => {
      mouse.x = e.clientX / width;
      mouse.y = e.clientY / height;
    });

    let t = 0;
    function animate() {
      ctx.clearRect(0, 0, width, height);
      if (image.complete) {
        const centerX = width / 2 + (mouse.x - 0.5) * 50;
        const centerY = height / 2 + (mouse.y - 0.5) * 50;
        const scale = 1 + Math.sin(t * 0.05) * 0.03;

        ctx.save();
        ctx.translate(centerX, centerY);
        ctx.scale(scale, scale);
        ctx.drawImage(image, -image.width / 2, -image.height / 2);
        ctx.restore();
      }

      t += 1;
      requestAnimationFrame(animate);
    }

    animate();
  </script>
</body>
</html>
